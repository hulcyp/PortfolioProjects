<Material name="simpleMaterial" shaderProgram="simpleShader" >
</Material>

<Material name="cobblestone" shaderProgram="lightingShader" >
	  <Uniform name="time" type="float">0.0</Uniform>
	  <Uniform name="uDiffuseMap" type="texture">CobblestoneDiffuse</Uniform>
	  <Uniform name="uNormalMap" type="texture">CobblestoneNormal</Uniform>
	  <Uniform name="uEmissiveMap" type="texture">CobblestoneEmissive</Uniform>
	  <Uniform name="uSpecularMap" type="texture">CobblestoneSpecular</Uniform>
	  <Uniform name="lightPos" type="vec3f"></Uniform>
	  <Uniform name="unlit" type="int" >0</Uniform>
	  <Uniform name="renderTangentSpace" type="int" >1</Uniform>
	  <Uniform name="cameraPos" type="vec3f" ></Uniform>
	  <Uniform name="enableDiffuse" type="int" >1</Uniform>
	  <Uniform name="enableSpecular" type="int" >1</Uniform>
	  <Uniform name="enableFog" type="int" >1</Uniform>
	  <Uniform name="enableEmissive" type="int" >1</Uniform>
	  <Uniform name="enableParallax" type="int" >1</Uniform>
</Material>

